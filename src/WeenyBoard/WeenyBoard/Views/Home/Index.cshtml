<div class="header">WeenyBoard</div>
﻿<h1 data-bind="text: name"></h1>

<div id="board">
  <ol id="swimlanes" data-bind="foreach: swimLanes">
    <li class="swimlane">
      <h2 data-bind="text: name"></h2>

        <ol data-bind="foreach: items">
            <li class="boardItem" data-bind="event: { mouseover: onMouseOver, mouseout: onMouseOut }"> 
                <!-- ko if: isEditing  -->
                <textarea type="text" data-bind="value: description, executeOnEnter: confirmEdit, executeOnEscape: cancelEdit, valueUpdate: 'afterkeydown', focusWhen: isEditing, selectWhen: isEditing"></textarea>
                <!-- /ko -->

                <!-- ko ifnot: isEditing  -->
                <a href="#" class="editLink" data-bind="visible: isHovered, click: beginEdit">edit</a>
                <span data-bind="text: description"></span>
                <!-- /ko -->
            </li>
        </ol>
        <a href="#">New item</a>
    </li>
  </ol>
</div>

@section header
{
  <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/board.css")" />
}

@section scripts
{
  <script type="text/javascript" src="@Url.Content("~/Scripts/Board/board.js")"></script>
}
